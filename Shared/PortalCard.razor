@using BlazorApp1.Classes
    <div class="customerCard card">
        <img style="background-color:@portal.background;" class="card-img-top" src="@portal.bannerImage">
        <div  class="card-body">
            <h5 class="card-title">@portal.name</h5>
            <p class="card-text">@portal.description</p>
            <a class="portalLink" href=@portal.host>
                <p class="portalLink">Go to @portal.name's portal</p>
            </a>
            
        </div>
        <div class="card-footer text-muted" style="background-image:@portal.background;background-color:@portal.background;">
            <img style="max-width: 100%;max-height: 100%;" src="@portal.logo">
        </div>
    </div>

@code {
    [Parameter] public Portal portal {get; set;}
}
